@model SistemaChequesNuevo.Models.Pago

@{
    ViewData["Title"] = "Delete";
}

<div class="edit active">

    <div class="edit-form">

        <h2>Delete</h2>

        <div>

            <dl>
                <dt class="login-register">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="login-register">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            <form asp-action="Delete" class="login-register" id="miFormulario">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn" />
                <a asp-action="Index" class="go-back">Back to List</a>
            </form>
        </div>

    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script>

        document.getElementById("miFormulario").addEventListener("submit", function (event) {
            // Evita que la página se recargue al enviar el formulario
            event.preventDefault();

            // Muestra la alerta de SweetAlert
            Swal.fire({
                title: "Do you want to remove this record?",
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "No"
            }).then((result) => {
                // Si el usuario confirma la eliminación
                if (result.isConfirmed) {
                    // Envía el formulario manualmente
                    document.getElementById("miFormulario").submit();
                }
            });
        });

</script>

        }