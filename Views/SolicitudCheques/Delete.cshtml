@model SistemaChequesNuevo.Models.SolicitudCheque

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit active">

    <div class="edit-form">

        <h2>Delete</h2>

        <dl>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.NumeroSolicitud)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroSolicitud)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.Monto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Monto)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.CuentaContable)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CuentaContable)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.CuentaDestino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CuentaDestino)
            </dd>
            <dt class="login-register">
                @Html.DisplayNameFor(model => model.Proveedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Proveedor.Id)
            </dd>
        </dl>

        <form asp-action="Delete" class="login-register" id="miFormulario">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn" />
            <a asp-action="Index" class="go-back">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        document.getElementById("miFormulario").addEventListener("submit", function (event) {
            // Evita que la página se recargue al enviar el formulario
            event.preventDefault();

            // Muestra la alerta de SweetAlert
            Swal.fire({
                title: "Do you want to remove this record?",
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "No"
            }).then((result) => {
                // Si el usuario confirma la eliminación
                if (result.isConfirmed) {
                    // Envía el formulario manualmente
                    document.getElementById("miFormulario").submit();
                }
            });
        });

    </script>

}
